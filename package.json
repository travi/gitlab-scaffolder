{
  "name": "@travi/gitlab-scaffolder",
  "description": "VCS scaffolder for projects to be hosted on GitLab",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "license": "MIT",
  "repository": "travi/gitlab-scaffolder",
  "bugs": "https://github.com/travi/gitlab-scaffolder/issues",
  "homepage": "https://npm.im/@travi/gitlab-scaffolder",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "clean": "rimraf lib/",
    "lint:js": "eslint . --cache",
    "lint:travis": "travis-lint .travis.yml",
    "lint:sensitive": "ban",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "test:unit:base": "mocha --recursive test/unit",
    "test:unit": "nyc run-s test:unit:base",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build": "run-s clean build:*",
    "build:js": "rollup -c",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@travi/any": "^2.0.0",
    "@travi/eslint-config-travi": "^1.6.18",
    "babel-preset-travi": "^1.4.0",
    "babel-register": "^6.26.0",
    "ban-sensitive-files": "^1.9.2",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "commitlint-config-travi": "^1.2.30",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^4.0.2",
    "mocha": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.1.2",
    "rollup-plugin-auto-external": "^2.0.0",
    "sinon": "^8.0.0",
    "travis-lint": "^1.0.0"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "inquirer": "^7.0.0"
  }
}
